<h2>Cursos</h2>

<div class="well well-sm">
  <%= link_to "Cadastrar", new_course_path, class: "btn btn-default" %>
</div>

<%= render "layouts/message" %>
<table class="table table-bordered">
  <thead>
  	<tr>
  	  <th>Id</th>
  	  <th>Nome</th>
  	  <th></th>
  	</tr>
  </thead>
  <tbody>
  	<% @courses.each do |course| %>
  	  <tr>
  	    <td><%= course.id %></td>
  	    <td><%= course.name %></td>
  	    <td>
  	      <%= link_to "Detalhes", course_path(course) %>
  	      <%= link_to "Editar", edit_course_path(course) %>
  	      <%= link_to "Excluir", course, method: :delete, data: {confirm: "Tem certeza?"} %>
  	    </td>
  	  </tr>
  	<% end %>
  </tbody>
</table>
